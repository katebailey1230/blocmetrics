<h1><%= @registered_application.name %></h1>

<div class="row">
  <div class="col-md-8">
    <h4>URL: <%= link_to @registered_application.url, "#{@registered_application.url}" %></h4>
    <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
    <%= pie_chart @registered_applications.events.group(:name).count %>
    <%= line_chart @registered_applications.events.group_by_day(:created_at).count %>


      <p style="font-size:14px;"><%= @events.count %> events created</p>
      <p style="font-size:12px;">Added by <%= @registered_applications.user.try(:email) %></p>

  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_registered_application_path, class: 'btn btn-success' %>
    <%= link_to "Delete", registered_application_path(current_user.id, @registered_application), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this app from Blocmetrics?'} %>
  </div>
</div>
