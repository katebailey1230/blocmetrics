<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="5"><h1 align="center">Registered Applications</h1></th>
    </tr>
    <tr>
      <th>Name</th>
      <th>URL</th>
      <th>Edit</th>
      <th>Delete App</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @registered_application.name %></td>
        <td><a href="<%= @registered_application.url %>"><%= @registered_application.url %></a></td>
        <td><%= link_to 'Edit', edit_registered_application_path(current_user.id) %></td>
        <td><%= link_to 'Delete', registered_application_path(current_user.id), method: :destroy, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
  <tfoot>
    <th colspan="5" align="center"><%= link_to 'Register A New Application', new_registered_application_path, class: 'btn btn-lg btn-success center-block' %></th>
  </tfoot>
</table>
